{
    "title": "CRNN_Training_Config",
     "feature_input":
    {
        "sample_rate": 16000, 
        "clip_frame": 100, 
        "fft_len": 512, 
        "frame_len": 256,
        "n_mels": 40, 
        "n_mfcc": 16
    },

    "feature": {
        "in_c": 16,
        "conv": [
            {"out_c": 32, "k": 16, "s": 2, "p": 5, "dropout": 0.0},
            {"out_c": 64, "k": 8, "s": 2, "p": 3, "dropout": 0.0}
        ],
        "rnn": {
            "dim": 64,
            "layers": 1,
            "dropout": 0.25,
            "bidirectional": true
        },
        "fc_out": 8
    },

    "dataset": {
        "train_datapath": "converted_pickle",
        "train_ratio": 0.6,
        "val_ratio": 0.2,
        "test_ratio": 0.2
    },

    "optimizer": {
        "type": "Adam",
        "lr": 0.001
    },

    "training": {
        "epochs": 100,
        "batch_size": 16,
        "checkpoint_path": "./",
        "model_name": "crnn_model_best.pth",
        "criterion": "CrossEntropyLoss"
    },

    "classes": {
        'UNKNOWN_WORD': 0,
        'HeyMemo': 1,
        'LookAnd': 2,
        'Pause': 3,
        'Play': 4,
        'StopRecording': 5,
        'TakeAPicture': 6,
        'TakeAVideo': 7,
    }
}